---

- name: Ensure the standard group ids are set
  become: true
  gather_facts: false
  hosts: '{{ HOSTS }}'

  tasks:

    - name: Ensure group 'jeff' exists
      ansible.builtin.group:
        name: jeff
        gid: 10000
        state: present

    - name: Ensure group 'appgroup' exists
      ansible.builtin.group:
        name: appgroup
        gid: 20000
        state: present

    - name: Ensure group 'postgres' exists
      ansible.builtin.group:
        name: postgres
        gid: 30000
        state: present


    #  Sample use:
    #  make PLAYBOOK=std_ids_groups HOSTS=enki, run-on-hosts

...
